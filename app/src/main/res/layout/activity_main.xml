<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">
    
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歴史マスターへようこそ！"
        android:textSize="20sp"
        android:textColor="#212121"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地域を選択"
        android:textSize="16sp"
        android:textColor="#757575"
        android:layout_marginBottom="8dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/btn_china"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="中国"
            android:layout_margin="4dp"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white"/>
        
        <Button
            android:id="@+id/btn_japan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="日本"
            android:layout_margin="4dp"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white"/>
            
        <Button
            android:id="@+id/btn_korea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="韓国"
            android:layout_margin="4dp"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/btn_mongol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="モンゴル"
            android:layout_margin="4dp"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white"/>
        
        <Button
            android:id="@+id/btn_vietnam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ベトナム"
            android:layout_margin="4dp"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white"/>
            
        <Button
            android:id="@+id/btn_cambodia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="カンボジア"
            android:layout_margin="4dp"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="機能を選択"
        android:textSize="16sp"
        android:textColor="#757575"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"/>
    
    <Button
        android:id="@+id/btn_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="解説を見る"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"/>
    
    <Button
        android:id="@+id/btn_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="クイズをする"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"/>
    
    <Button
        android:id="@+id/btn_learning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学習する"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"/>
    
    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="検索する"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"/>
    
    <Button
        android:id="@+id/btn_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="テストを受ける"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"/>
    
</LinearLayout>