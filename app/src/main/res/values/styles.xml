<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ベースアプリテーマ -->
    <style name="Theme.HistoryMaster" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主要色 -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- セカンダリ色 -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- 背景色 -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:statusBarColor">@color/color_primary_dark</item>
        <item name="android:navigationBarColor">@color/navigation_bar_light</item>
        
        <!-- テキスト色 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- フォント -->
        <item name="fontFamily">sans-serif</item>
        
        <!-- 形状 -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.HistoryMaster.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.HistoryMaster.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.HistoryMaster.Large</item>
        
        <!-- コンポーネントスタイル -->
        <item name="materialButtonStyle">@style/Widget.HistoryMaster.Button</item>
        <item name="materialCardViewStyle">@style/Widget.HistoryMaster.CardView</item>
        <item name="textInputStyle">@style/Widget.HistoryMaster.TextInputLayout</item>
    </style>
    
    <!-- ダークテーマ -->
    <style name="Theme.HistoryMaster.Dark" parent="Theme.HistoryMaster">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="colorSurface">@color/dark_mode_surface</item>
        <item name="colorOnSurface">@color/dark_mode_text_primary</item>
    </style>
    
    <!-- 形状定義 -->
    <style name="ShapeAppearance.HistoryMaster.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    
    <style name="ShapeAppearance.HistoryMaster.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.HistoryMaster.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <!-- ボタンスタイル -->
    <style name="Widget.HistoryMaster.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="elevation">2dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>
    
    <style name="Widget.HistoryMaster.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/color_primary</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <style name="Widget.HistoryMaster.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>
    
    <!-- カードビュースタイル -->
    <style name="Widget.HistoryMaster.CardView" parent="CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:background">@drawable/card_background</item>
    </style>
    
    <!-- テキスト入力スタイル -->
    <style name="Widget.HistoryMaster.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/color_primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>
    
    <!-- テキストスタイル -->
    <style name="TextAppearance.HistoryMaster.Headline1">
        <item name="android:textSize">96sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.015</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
    
    <style name="TextAppearance.HistoryMaster.Headline2">
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.005</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
    
    <style name="TextAppearance.HistoryMaster.Headline3">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.HistoryMaster.Headline4">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.007</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.HistoryMaster.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.HistoryMaster.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.007</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HistoryMaster.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.009</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.HistoryMaster.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.007</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HistoryMaster.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.031</item>
        <item name="fontFamily">sans-serif</item>
        <item name="lineHeight">24sp</item>
    </style>
    
    <style name="TextAppearance.HistoryMaster.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.017</item>
        <item name="fontFamily">sans-serif</item>
        <item name="lineHeight">20sp</item>
    </style>
    
    <style name="TextAppearance.HistoryMaster.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HistoryMaster.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.033</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.HistoryMaster.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.083</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <!-- ダイアログスタイル -->
    <style name="Theme.HistoryMaster.Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="cornerRadius">16dp</item>
    </style>
    
    <!-- アニメーション -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    
    <!-- ツールバースタイル -->
    <style name="Widget.HistoryMaster.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.HistoryMaster.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.HistoryMaster.Body2</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="elevation">4dp</item>
    </style>
    
    <!-- プログレスバースタイル -->
    <style name="Widget.HistoryMaster.ProgressBar" parent="Widget.MaterialComponents.ProgressIndicator">
        <item name="trackColor">@color/learning_progress_background</item>
        <item name="indicatorColor">@color/learning_progress_foreground</item>
        <item name="trackThickness">8dp</item>
    </style>
    
    <!-- チップスタイル -->
    <style name="Widget.HistoryMaster.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipMinTouchTargetSize">48dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeColor">@color/color_primary</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>
    
    <!-- タブレイアウトスタイル -->
    <style name="Widget.HistoryMaster.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/color_primary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabRippleColor">@color/color_primary_light</item>
        <item name="tabTextAppearance">@style/TextAppearance.HistoryMaster.Button</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabSelectedTextColor">@color/color_primary</item>
    </style>
    
    <!-- スイッチスタイル -->
    <style name="Widget.HistoryMaster.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="useMaterialThemeColors">true</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <!-- スライダースタイル -->
    <style name="Widget.HistoryMaster.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="haloColor">@color/color_primary_light</item>
        <item name="thumbColor">@color/color_primary</item>
        <item name="trackColorActive">@color/color_primary</item>
        <item name="trackColorInactive">@color/color_primary_light</item>
        <item name="tickColorActive">@color/color_primary</item>
        <item name="tickColorInactive">@color/color_primary_light</item>
    </style>
</resources>